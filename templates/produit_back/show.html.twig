{% extends 'baseBack.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ produit.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ produit.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Image File</th>
                    <td>
                        {% if produit.imagefile %}
                            <img src="{{ asset('uploads/' ~ produit.imagefile) }}" alt="Product Image">
                        {% else %}
                            No image available
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th scope="row">Prix</th>
                    <td>{{ produit.prix }}</td>
                </tr>
                <tr>
                    <th scope="row">Categorie</th>
                    <td>{{ produit.categorie }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_produit_back_index') }}" class="btn btn-secondary">Back to List</a>

    <a href="{{ path('app_produit_back_edit', {'id': produit.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('produit_back/_delete_form.html.twig') }}
{% endblock %}
