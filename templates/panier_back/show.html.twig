{% extends 'baseBack.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ panier.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Total</th>
                    <td>{{ panier.total }}</td>
                </tr>
                <tr>
                    <th scope="row">Date Panier</th>
                    <td>{{ panier.datepanier ? panier.datepanier|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th scope="row">Etat</th>
                    <td>{{ panier.etat }}</td>
                </tr>
                <tr>
                    <th scope="row">Id User</th>
                    <td>{{ panier.idUser }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_panier_back_index') }}" class="btn btn-secondary">Back to List</a>

    <a href="{{ path('app_panier_back_edit', {'id': panier.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('panier_back/_delete_form.html.twig') }}
{% endblock %}
