{% extends 'baseback.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
<div class="container">
    <h1 class="display-4 mb-4">Categorie</h1>

    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">CategorieId</th>
                    <td>{{ categorie.categorieId }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ categorie.nom }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mb-3">
        <a href="{{ path('app_categorie_back_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_categorie_back_edit', {'categorieId': categorie.categorieId}) }}" class="btn btn-primary">Edit</a>
    </div>

    {{ include('categorie_back/_delete_form.html.twig') }}
</div>
{% endblock %}
