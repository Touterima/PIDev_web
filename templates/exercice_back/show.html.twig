{% extends 'baseback.html.twig' %}

{% block title %}Exercice{% endblock %}

{% block body %}
<div class="container">
    <h1 class="display-4 mb-4">Exercice</h1>

    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">ExerciceId</th>
                    <td>{{ exercice.exerciceId }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ exercice.description }}</td>
                </tr>
                <tr>
                    <th scope="row">NombreDeFois</th>
                    <td>{{ exercice.nombreDeFois }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ exercice.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Duree</th>
                    <td>{{ exercice.duree }}</td>
                </tr>
                <tr>
                    <th scope="row">Image</th>
                    <td>{{ exercice.image }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="mb-3">
        <a href="{{ path('app_exercice_back_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_exercice_back_edit', {'exerciceId': exercice.exerciceId}) }}" class="btn btn-primary">Edit</a>
    </div>

    {{ include('exercice_back/_delete_form.html.twig') }}
</div>
{% endblock %}
