{% extends 'baseBack.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <div class="table-responsive">
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ commande.id }}</td>
                </tr>
                <tr>
                    <th scope="row">IdUser</th>
                    <td>{{ commande.idUser }}</td>
                </tr>
                <tr>
                    <th scope="row">IdProduit</th>
                    <td>{{ commande.idProduit }}</td>
                </tr>
                <tr>
                    <th scope="row">Quantity</th>
                    <td>{{ commande.quantity }}</td>
                </tr>
                <tr>
                    <th scope="row">Date Creation</th>
                    <td>{{ commande.datecreation ? commande.datecreation|date('Y-m-d') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <a href="{{ path('app_commande_back_index') }}" class="btn btn-secondary">Back to List</a>

    <a href="{{ path('app_commande_back_edit', {'id': commande.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('commande_back/_delete_form.html.twig') }}
{% endblock %}
